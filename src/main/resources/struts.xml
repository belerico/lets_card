<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.ui.theme" value="simple"/>

    <package name="welcome" extends="struts-default">
        <action name="index">
            <result>/index.jsp</result>
        </action>
    </package>

    <package name="user" namespace="/user" extends="struts-default">
        <action name="userPage" class="com.assignment3.struts2.action.RedirectAction" method="JSPRedirect">
            <result name="success">view/User.jsp</result>
        </action>
        <action name="goIndex" class="com.assignment3.struts2.action.RedirectAction" method="JSPRedirect">
            <result name="success">/index.jsp</result>
        </action>
        <action name="createUserPage" class="com.assignment3.struts2.action.user.CreateUserAction"
                method="createUserPage">
            <result name="success">view/CreateUser.jsp</result>
            <result name="input">view/CreateUser.jsp</result>
        </action>
        <action name="createUser" class="com.assignment3.struts2.action.user.CreateUserAction" method="createUser">
            <result name="success" type="chain">showUsers</result>
            <result name="input">view/CreateUser.jsp</result>
        </action>
        <action name="removeUser" class="com.assignment3.struts2.action.user.UserAction" method="removeUser">
            <result name="success" type="chain">showUsers</result>
        </action>
        <action name="showUsers" class="com.assignment3.struts2.action.user.UserAction" method="showUsers">
            <result name="success">view/ShowUsers.jsp</result>
        </action>
    </package>

    <package name="activity" namespace="/activity" extends="struts-default">
        <action name="businessPage" class="com.assignment3.struts2.action.RedirectAction" method="JSPRedirect">
            <result name="success">view/BusinessActivity.jsp</result>
        </action>
        <action name="goIndex" class="com.assignment3.struts2.action.RedirectAction" method="JSPRedirect">
            <result name="success">/index.jsp</result>
        </action>
        <action name="createActivityPage" class="com.assignment3.struts2.action.activity.CreateActivityAction"
                method="createActivityPage">
            <result name="success">view/CreateBusinessActivity.jsp</result>
        </action>
        <action name="createActivity" class="com.assignment3.struts2.action.activity.CreateActivityAction"
                method="createActivity">
            <result name="success" type="chain">showActivities</result>
            <result name="input">view/CreateBusinessActivity.jsp</result>
        </action>
        <action name="showActivities" class="com.assignment3.struts2.action.activity.BusinessActivityAction"
                method="showActivities">
            <result name="success">view/ShowBusinessActivity.jsp</result>
        </action>
    </package>

    <package name="place" namespace="/place" extends="struts-default">
        <action name="showPlace" class="com.assignment3.struts2.action.place.PlaceAction" method="execute">
            <result name="success">view/ShowPlaces.jsp</result>
        </action>
        <action name="goIndex" class="com.assignment3.struts2.action.RedirectAction" method="JSPRedirect">
            <result name="success">/index.jsp</result>
        </action>
    </package>
</struts>