<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true"/>
    <package name="basicstruts2"  extends="struts-default">
        <action name="index">
            <result>/index.jsp</result>
        </action>
    </package>
    <package name="user" namespace="/user" extends="struts-default">
        <action name="hello" class="com.assignment3.action.user.UserAction" method="cazzo">
            <result name="success">view/User.jsp</result>
        </action>
        <action name="add" class="com.assignment3.action.user.FakeUserAction" method="execute">
            <result>view/AddUser.jsp</result>
        </action>
        <action name="welcome" class="com.assignment3.action.user.WelcomeUserAction" method="execute">
            <result name="success">view/UserWelcome.jsp</result>
            <result name="error">view/Error.jsp</result>
        </action>
    </package>
    <package name="businessActivity" namespace="/businessActivity" extends="struts-default">
    <action name="business" class="com.assignment3.action.businessactivity.BusinessActivityAction" method="executeBusinessActivity">
        <result name="success">view/BusinessActivity.jsp</result>
    </action>
    </package>
</struts>