<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>

    <constant name="struts.devMode" value="true"/>
    <package name="welcome" extends="struts-default">
        <action name="index">
            <result>/index.jsp</result>
        </action>
    </package>

    <package name="user" namespace="/user" extends="struts-default">
        <action name="user" class="com.assignment3.action.UserAction" method="JSPRedirect">
            <result name="success">view/User.jsp</result>
        </action>
        <action name="createUserPage" class="com.assignment3.action.UserAction" method="createUserPage">
            <result name="success">view/CreateUser.jsp</result>
        </action>
        <action name="createUser" class="com.assignment3.action.UserAction" method="createUser">
            <result name="success" type="chain">showUsers</result>
            <result name="error">view/Error.jsp</result>
        </action>
        <action name="showUsers" class="com.assignment3.action.UserAction" method="showUsers">
            <result name="success">view/ShowUsers.jsp</result>
            <!--<result name="error">view/Error.jsp</result>-->
        </action>
    </package>

    <package name="businessActivity" namespace="/businessActivity" extends="struts-default">
        <action name="business" class="com.assignment3.action.BusinessActivityAction" method="executeBusinessActivity">
            <result name="success">view/BusinessActivity.jsp</result>
        </action>
    </package>
    <package name="place" namespace="/place" extends="struts-default">
        <action name="showPlace" class="com.assignment3.action.PlaceAction" method="execute">
            <result name="success">view/Place.jsp</result>
        </action>
    </package>
</struts>