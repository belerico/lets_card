<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.devMode" value="true"/>
    <constant name="struts.ui.theme" value="simple"/>
    <constant name="struts.ognl.allowStaticMethodAccess" value="true"/>

    <package name="welcome" extends="struts-default">
        <action name="index">
            <result>/index.jsp</result>
        </action>
    </package>

    <package name="user" namespace="/user" extends="struts-default">
        <action name="userPage" class="com.assignment3.struts2.action.RedirectAction" method="JSPRedirect">
            <result name="success">view/User.jsp</result>
        </action>
        <action name="goIndex" class="com.assignment3.struts2.action.RedirectAction" method="JSPRedirect">
            <result name="success">/index.jsp</result>
        </action>
        <action name="createUserPage" class="com.assignment3.struts2.action.user.CreateUserAction"
                method="createUserPage">
            <result name="success">view/CreateUser.jsp</result>
            <!--<result name="input">view/CreateUser.jsp</result>-->
        </action>
        <action name="createUser" class="com.assignment3.struts2.action.user.CreateUserAction" method="createUser">
            <result name="success" type="chain">showUsers</result>
            <result name="input">view/CreateUser.jsp</result>
        </action>
        <action name="removeUser" class="com.assignment3.struts2.action.user.UserAction" method="removeUser">
            <result name="success" type="chain">showUsers</result>
        </action>
        <action name="showUsers" class="com.assignment3.struts2.action.user.UserAction" method="showUsers">
            <result name="success">view/ShowUsers.jsp</result>
        </action>
    </package>

    <package name="activity" namespace="/activity" extends="struts-default">
        <action name="activityPage" class="com.assignment3.struts2.action.RedirectAction" method="JSPRedirect">
            <result name="success">view/Activity.jsp</result>
        </action>
        <action name="goIndex" class="com.assignment3.struts2.action.RedirectAction" method="JSPRedirect">
            <result name="success">/index.jsp</result>
        </action>
        <action name="createActivityPage" class="com.assignment3.struts2.action.activity.ActivityAction"
                method="createActivityPage">
            <result name="success">view/CreateActivity.jsp</result>
        </action>
        <action name="createActivity" class="com.assignment3.struts2.action.activity.ActivityAction"
                method="createActivity">
            <result name="success" type="chain">showActivities</result>
            <result name="input">view/CreateActivity.jsp</result>
        </action>
        <action name="removeActivity" class="com.assignment3.struts2.action.activity.ActivityAction"
                method="removeActivity">
            <result name="success" type="chain">showActivities</result>
        </action>
        <action name="removeAllActivities" class="com.assignment3.struts2.action.activity.ActivityAction"
                method="removeAllActivities">
            <result name="success" type="chain">showActivities</result>
        </action>
        <action name="showActivities" class="com.assignment3.struts2.action.activity.ActivityAction"
                method="showActivities">
            <result name="success">view/ShowActivities.jsp</result>
        </action>
    </package>

    <package name="card" namespace="/card" extends="struts-default">
        <action name="cardPage" class="com.assignment3.struts2.action.RedirectAction" method="JSPRedirect">
            <result name="success">view/Card.jsp</result>
        </action>
        <action name="goIndex" class="com.assignment3.struts2.action.RedirectAction" method="JSPRedirect">
            <result name="success">/index.jsp</result>
        </action>
        <action name="createCardPage" class="com.assignment3.struts2.action.card.CreateCardAction" method="createCardPage">
            <result name="success">view/CreateCard.jsp</result>
        </action>
        <action name="createCard" class="com.assignment3.struts2.action.card.CreateCardAction" method="createCard">
            <result name="success" type="chain">showCards</result>
            <result name="error">view/Error.jsp</result>
            <result name="input">view/CreateCard.jsp</result>
        </action>
        <action name="showCards" class="com.assignment3.struts2.action.card.CardAction" method="showCards">
            <result name="success">view/ShowCard.jsp</result>
        </action>
    </package>

    <package name="place" namespace="/place" extends="struts-default">
        <action name="placePage" class="com.assignment3.struts2.action.RedirectAction" method="JSPRedirect">
            <result name="success">view/Place.jsp</result>
        </action>
        <action name="createPlacePage" class="com.assignment3.struts2.action.place.PlaceAction"
                method="createPlacePage">
            <result name="success">view/CreatePlace.jsp</result>
        </action>
        <action name="createPlace" class="com.assignment3.struts2.action.place.PlaceAction" method="createPlace">
            <result name="success" type="redirectAction">showPlaces</result>
            <result name="input">view/CreatePlace.jsp</result>
        </action>
        <action name="showPlaces" class="com.assignment3.struts2.action.place.PlaceAction" method="showPlaces">
            <result name="success">view/ShowPlaces.jsp</result>
        </action>
        <action name="removePlace" class="com.assignment3.struts2.action.place.PlaceAction"
                method="removePlace">
            <result name="success" type="chain">showPlaces</result>
        </action>
        <action name="removeAllPlaces" class="com.assignment3.struts2.action.place.PlaceAction"
                method="removeAllPlaces">
            <result name="success" type="chain">showPlaces</result>
        </action>
        <action name="goIndex" class="com.assignment3.struts2.action.RedirectAction" method="JSPRedirect">
            <result name="success">/index.jsp</result>
        </action>
    </package>
</struts>